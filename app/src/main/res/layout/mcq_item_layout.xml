<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/mcqQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:hint="Question 1"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textSize="22sp" />

    <android.support.v7.widget.CardView
        android:id="@+id/mcqCardViewOne"
        style="@style/MCQAnswerStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mcqQuestion"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="false">

        <TextView
            android:id="@+id/mcqAnswerOne"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Answer One"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:textSize="22sp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/mcqCardViewTwo"
        style="@style/MCQAnswerStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mcqCardViewOne"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="false">

        <TextView
            android:id="@+id/mcqAnswerTwo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Answer two"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:textSize="22sp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/mcqCardViewThree"
        style="@style/MCQAnswerStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mcqCardViewTwo"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="false">

        <TextView
            android:id="@+id/mcqAnswerThree"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Answer Three"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:textSize="22sp" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/mcqCardViewFour"
        style="@style/MCQAnswerStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mcqCardViewThree"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp"
        app:cardUseCompatPadding="false">

        <TextView
            android:id="@+id/mcqAnswerFour"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Answer Four"
            android:paddingLeft="5dp"
            android:paddingStart="5dp"
            android:textSize="22sp" />
    </android.support.v7.widget.CardView>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nextQuestion"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="125dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:src="@mipmap/ic_next_question" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/prevQuestion"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/nextQuestion"
        android:layout_marginLeft="111dp"
        android:layout_marginStart="111dp"
        android:src="@mipmap/ic_prev_question" />
</RelativeLayout>